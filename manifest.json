{
  "manifest_version": 3,
  "name": "YouRedirect",
  "version": "0.1",
  "description": "Redirects YouTube links to Piped",
  "permissions": ["tabs", "webNavigation", "storage", "activeTab"],
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["*://www.youtube.com/*"]
    }
  ]
}
